#include <stdio.h>
#include <string.h>
 
int main()
 {
           char text[100], blank[100];
              int c = 0, d = 0;
               
                  printf("Enter the text: ");
                     gets(text);
                      
                         while (text[c] != '\0')
                            {
                                     if (text[c] != ' ') 
                                      {
                                    blank[d] = text[c];
                                    d++;
                            }
                                  c++;
 }

         printf("string after removing all blank spaces: %s\n", blank);
          
             return 0;
             }
