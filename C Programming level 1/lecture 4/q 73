#include <stdio.h>
int main() {
            int n, i, j;
                unsigned long long fact = 1, sum = 0;
                    printf("Enter the last number of the series: ");
                        scanf("%d", &n);
                        
 for (i = 1; i <= n; ++i) 
 {      fact=1;
        for(j=i;j>0;j--)
        {
                fact *= j;
}
        sum+=fact;
}
  for(i=1;i<n;i++)
        printf("%d! + ",i);
                printf("%d! = %llu",n,sum);
    return 0;
}
