#include <stdio.h>

int main()
{
            int i, j, k,z;
            printf("Enter number of rows : ");
            scanf("%d",&z);
                for(i=1;i<=z;i++)
                    {
                                for(j=1;j<=z-i+1;j++)
                                        {
                                printf(" ");
                    }
                            for(k=1;k<=i;k++)
                                    {
                printf("* ");
}
        printf("\n");
            }
            
                return 0;
                }
